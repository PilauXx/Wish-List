{% extends 'base.html.twig' %}

{% block title %}Wish-List{% endblock %}

{% block body %}
    <h1 class="title">Stock - gestion des cadeaux</h1>
    <br>
    <a href="/stock/newCadeau" class="bouton" >
        <button class="btn btn-primary" type="button">Ajouter un cadeau</button>
    </a>
    <h3>Liste des cadeaux : </h3>
    <br>
    <br>
    {# TODO adapter en pop-up  #}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
        <br>
    {% endfor %}
    {# TODO -------------------#}
    <br>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Désignation</th>
                <th>Age requie</th>
                <th>Prix moyen</th>
                <th>catégorie</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for cadeau in cadeaux %}
             <tr>
                <td>{{ cadeau.id }}</td>
                <td>{{ cadeau.designation }}</td>
                <td>{{ cadeau.ageMin }}</td>
                <td>{{ cadeau.prixMoyen }}</td>
                <td>{{ cadeau.categorie.nom }}</td>
                <td>
                    <a href="/stock/editCadeau/{{ cadeau.id }}" >
                        <button type="button" class="btn btn-primary">Modifier</button>
                    </a>
                    {% if cadeau.personnes.count == 0 %}
                        <a href="/stock/suprCadeau/{{ cadeau.id }}" >
                            <button type="button" class="btn btn-danger">Supprimer</button>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}